@import 'bootstrap';
@import 'bootstrap-sprockets';
@import url(https://fonts.googleapis.com/css?family=Palanquin:200,400);

body {
  font-family: 'Palanquin', sans-serif;
}

#search {
  background-image: url( <%= asset_path "1-TYH_3907.jpg" %>);
  background-size: cover;
  max-width: 100%;
  max-height: 100%;

  // filter: alpha(opacity=40);
  background-repeat: no-repeat;
  background-position: center bottom;
  height: 100vh;
  color: white;
  font-size: 30px;
}

.form-inline {
  text-align: center;
  height: 100px;
  padding: 50px 0;
}

.form-group {
  padding: 50px;
}

a {
  color: inherit;
}
.hoods li {
  text-align: center;
  margin-left: -40px;
  list-style-type: none !important;

}

.stats p, .charts img {
  text-align: center;
  padding-top: 35px;
}



h1 {
  text-align: center;
  }

i {
  text-align: center;
}
.hood, .hoods, .charts {
  height: 100vh;
}

.hoodInfo {
  padding-left: 40px;
}

.fa {
  font-size: 200%;
  margin-right: 35px;
  display: block;
}

.hoods .fa {
  margin-top: 20px;
}

.hood .fa {

}

.stats .fa {
  margin-top: 460px;
}

img {
  height: 300px;
}

.hoods .anchor {
  margin-top: 350px;
}

.hood .anchor {
  margin-top: 50px;
}

.nav-justified {
  width: 80%;
  margin: auto;
  padding: 20px;
  font-size: 150%;
}

.charts {
  height: 100vh;
}

.nav-pills>li.active, .nav-pills>li.active>a:hover, .nav-pills>li.active>a:focus {
  color: inherit;
  background-color: #dbdbdb;
}

.titletext {
  text-align: center;
  z-index: 2;
  margin: auto;
  line-height: 88px;
  vertical-align: middle;
  color: #fff;
  width: 40%;
  background: rgba(0, 0, 0, 0.3);
}

#chart_description p {
  margin-top: 250px;
  text-align: center;
  font-size: 200%;
}

.chart {
  margin-top: -100px;
  z-index: -1;
}
